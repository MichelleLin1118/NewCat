<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/activity_cat"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:id="@+id/title_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/morandi_Soya_Bean"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/morandi_Parchment"
        android:layout_gravity="center_vertical" />
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/a_home_button"/>
    <ImageButton
        android:id="@+id/add_page_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/a_add_page_button"/>
    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/a_delete_button"/>
</RelativeLayout>
    <androidx.viewpager.widget.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pager_cat"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>