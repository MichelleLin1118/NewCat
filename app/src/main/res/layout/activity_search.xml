<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/morandi_Parchment">
    <RelativeLayout
        android:id="@+id/title_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/morandi_Soya_Bean">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="42dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/morandi_Parchment"
            android:layout_gravity="center_vertical" />
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/a_home_button"/>
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/morandi_Soft_Amber">
      <ImageButton
          android:id="@+id/cat_black_button"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/a_cat_black_button"/>
      <ImageButton
          android:id="@+id/cat_white_button"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/a_cat_white_button" />
      <ImageButton
          android:id="@+id/cat_orange_button"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/a_cat_orange_button"/>
      <ImageButton
          android:id="@+id/cat_calico_button"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/a_cat_calico_button"/>
        <ImageButton
            android:id="@+id/cat_tuxedo_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a_cat_tuxedo_button" />
        <ImageButton
            android:id="@+id/cat_tabby_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a_cat_tabby_button" />
        <ImageButton
            android:id="@+id/cat_other_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a_cat_other_button" />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical"-->
<!--        android:layout_marginBottom="5dp">-->
        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_taipei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/taipei"/>
            <RadioButton
                android:id="@+id/radio_new_taipei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/newTaipei"/>
            <RadioButton
                android:id="@+id/radio_taoyuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/taoyuan"/>
            <RadioButton
                android:id="@+id/radio_hsinchu_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/hsinchu"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radio_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_hsinchu_county"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/chubei"/>
            <RadioButton
                android:id="@+id/radio_miaoli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/miaoli"/>
            <RadioButton
                android:id="@+id/radio_taichung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/taichung"/>
            <RadioButton
                android:id="@+id/radio_others"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_Soft_Amber"
                android:text="@string/other"/>
        </RadioGroup>
    </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/clear_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/clear_button"
                android:textColor="@color/morandi_Armadillo"
                android:background="@color/morandi_bone"/>
        </LinearLayout>

<!--    </LinearLayout>-->

    <ListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>