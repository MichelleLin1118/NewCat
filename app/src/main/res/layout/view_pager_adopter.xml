<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/adopter_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/morandi_Parchment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/morandi_Parchment">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/name"/>
            <EditText
                android:id="@+id/adopter_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:layout_weight="1"
                android:singleLine="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sex"/>
            <ToggleButton
                android:id="@+id/sexuality_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/birth"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/adopter_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="date"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"/>
            <Spinner
                android:id="@+id/spinner_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/morandi_Armadillo"/>
            <EditText
                android:id="@+id/adopter_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/morandi_Armadillo"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"/>

            <TextView
                android:id="@+id/adopter_otherCats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/otherCats"
                android:textColor="@color/morandi_Armadillo"/>
            <EditText
                android:id="@+id/adopter_catsAtHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="@color/morandi_Armadillo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expense"
                android:textColor="@color/morandi_Armadillo"/>
            <EditText
                android:id="@+id/adopter_predictedExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberSigned"
                android:textColor="@color/morandi_Armadillo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/family"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_familyMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"/>
        <CheckBox
            android:id="@+id/adopter_familyAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/familyAgree"
            android:textColor="@color/morandi_Armadillo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/environment"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_environment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adoptionDate"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_adoptionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/others"
            android:textColor="@color/morandi_Armadillo"/>
        <EditText
            android:id="@+id/adopter_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/morandi_Armadillo"/>
        <ImageView
            android:id="@+id/adopter_cat_img"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/adopter_cat_img2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/adopter_cat_img3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/adoption_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adoptionContract"
            android:textColor="@color/morandi_Armadillo"
            android:background="@drawable/a_button"/>

